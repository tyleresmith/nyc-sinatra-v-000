<h1>Create a new figure</h1>

<form action="/figures" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="figure[name]" id="figure_name">

  <br></br>

  <label>Choose an existing titles:</label>

  <br></br>

  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="<%="title_"+title.id.to_s%>" value="<%=title.id%>"><%=title.name%></input>
  <%end%>

  <br></br>

    <label>and/or, create a new title:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" name="title[name]" id="new_title"></input>
    <br></br>



  <label>Choose an existing landmarks:</label>

  <br></br>

  <%Landmark.all.each do |land|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%="landmark_"+land.id.to_s%>" value="<%=land.id%>"><%=land.name%></input>
  <%end%>

  <br></br>

    <label>and/or, create a new landmark:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" name="landmark[name]" id="new_landmark"></input>
    <br></br>
  <input type="submit" value="Create New Figure">
</form>